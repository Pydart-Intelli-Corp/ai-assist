# POORNASREE AI Platform Configuration
# Copy this file to .env and update with your actual values

# API Configuration
API_VERSION=v1
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database Configuration
# Update with your Azure MySQL connection details
DATABASE_URL=mysql+pymysql://username:password@hostname:3306/database_name

# JWT Security Configuration
# Generate a strong secret key for JWT tokens
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Services Configuration
# Get your API key from Google AI Studio
GOOGLE_API_KEY=your-google-ai-api-key

# Weaviate Vector Database
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key

# Email Configuration (for OTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourcompany.com

# White-Label Configuration
PLATFORM_NAME=POORNASREE AI
PLATFORM_VERSION=2.0
ENABLE_WHITE_LABEL=True
COMPANY_NAME=Your Company Name

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes

# Redis Configuration (optional - for caching and background tasks)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8000"]

# Admin Default Configuration
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_INITIAL_PASSWORD=change-this-password
